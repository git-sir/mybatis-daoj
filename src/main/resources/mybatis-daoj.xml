<?xml version="1.0" encoding="UTF-8"?>

<daoj>
    <dataSource>
        <property name="jdbcDriver" value="com.mysql.jdbc.Driver"/>
        <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/demo"/>
        <property name="username" value="root"/>
        <property name="password" value="123"/>
    </dataSource>


    <params>
        <!-- 指定实体类基类的完整路径，该路径会应用在子类的导包import语句中 -->
        <property name="basicEntity" value="com.kailin.demo.entity.BasicVo"/>

        <!-- 指定DAO基类, 默认为 BasicDao，该路径会应用在子类的导包import语句中和mapper.xml的namespace属性中 -->
        <property name="basicDao" value="com.kailin.demo.dao.BasicDao"/>

        <!-- 设定生成后的实体类所在的包 -->
        <property name="entityPackage" value="com.kailin.demo.entity"/>

        <!-- 设定生成后的DAO接口所在的包 -->
        <property name="daoPackage" value="com.kailin.demo.dao"/>

        <!-- 设定代码生成的输出目录, 支持相对路径或绝对路径 -->
        <property name="outputDirc" value="generated-files"/>

        <!-- 列出要生成的表名, 多个表可以逗号(',')分隔。 注意，数据库表必须指定了主键列。 -->
        <property name="tables" value="area"/>

    </params>

</daoj>